<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="20dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/thesis_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/bookmarked_thesis_title"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Thesis Title"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/bookmarked_published_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/bookmarked_abstract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="thsi is an example of abstract"
                    android:textSize="12dp"/>
            </LinearLayout>
            <ImageButton
                android:elevation="5dp"
                android:id="@+id/btn_remove_bookmark"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_baseline_bookmark_remove_24" />
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>